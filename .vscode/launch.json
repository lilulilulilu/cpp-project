{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "main.cpp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/main", // 可执行文件路径
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "启用LLDB命令格式",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "logging": {
                "engineLogging": false
            }
        }
    ]
}